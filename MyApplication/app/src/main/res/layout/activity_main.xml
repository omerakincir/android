<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#44bd32"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#e84118">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center|top"
                android:background="@drawable/kedi1"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="50dp"
                android:background="#00a8ff"
                android:text="PET E-KARTNESİ"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#dcdde1">

            <ImageView
                android:layout_width="100dp"
                android:layout_gravity="center|top"
                android:layout_margin="15dp"
                android:background="@drawable/kopek"
                android:layout_height="100dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="SORU SOR"
                android:background="#4cd137"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#0C3E85"
        android:layout_height="180dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#40739e">

            <ImageView
                android:layout_width="100dp"
                android:layout_gravity="center|top"
                android:layout_margin="15dp"
                android:background="@drawable/kopek3"
                android:layout_height="100dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="DUYURULAR"
                android:background="#dcdde1"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#fbc531">

            <ImageView
                android:layout_width="100dp"
                android:layout_gravity="center|top"
                android:layout_margin="15dp"
                android:background="@drawable/kopek2"
                android:layout_height="100dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="AŞI TAKİBİ"
                android:background="#f5f6fa"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>


